@model IEnumerable<AssignmentApp.Models.Enrollment>

@{
    ViewBag.Title = "Course -";
    Layout = "~/Views/Shared/Trainee_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Courses</title>
</head>
<body>
    <h2>My Joined Courses</h2>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainee.TraineeName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainee.TraineeName)
            </td>
            <td>
                @Html.ActionLink("Detail", "Detail", new { id=item.Course.CourseID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
