@model IEnumerable<AssignmentApp.Models.Topic>

@{
    ViewBag.Title = "Topics Management -";
    Layout = "~/Views/Shared/Staff_Layout.cshtml";
}

<h2>Topics management</h2>

<p>
    @Html.ActionLink("Create New Topic", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tutor.TutorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TopicName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tutor.TutorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TopicID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TopicID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TopicID })
        </td>
    </tr>
}

</table>
