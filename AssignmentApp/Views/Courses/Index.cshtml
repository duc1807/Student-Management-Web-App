@model IEnumerable<AssignmentApp.Models.Course>

@{
    ViewBag.Title = "Course Management -";
    Layout = "~/Views/Shared/Staff_Layout.cshtml";
}

<h2>Course Management</h2>

<p>
    @Html.ActionLink("Create new course", "Create")
</p>
<br />
<center>
    @using (Html.BeginForm("Search", "Courses"))
    {
        @Html.Editor("search");
        <input type="submit" value="Search" class="btn btn-default" />
    }
</center>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic.TopicName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.TopicName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CourseID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })
            </td>
        </tr>
    }

</table>
